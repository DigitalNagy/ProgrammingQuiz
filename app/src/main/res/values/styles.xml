<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- App branding color for the app bar -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!-- Darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!-- Theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Style for EditText -->
    <style name="EditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:hint">@string/name</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textColorHint">#303F9F</item>
        <item name="android:inputType">textCapWords</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <!-- Style for questions text -->
    <style name="QuestionStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Style for CheckBox and RadioButton answers -->
    <style name="AnswerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Style for score button -->
    <style name="ScoreButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/colorSecondary</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:onClick">scoreButton</item>
        <item name="android:text">@string/score</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!-- Style for reset button -->
    <style name="ResetButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:onClick">resetButton</item>
        <item name="android:text">@string/reset</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!-- Style for score text -->
    <style name="ScoreTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/score_text</item>
        <item name="android:textColor">#009eff</item>
        <item name="android:textSize">25sp</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:visibility">visible</item>
    </style>
</resources>